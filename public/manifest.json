{
  "manifest_version": 3,
  "name": "TabbyNotes",
  "description": "Notes taking extention with tabs using local storage",
  "version": "4.0.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open to take notes"
  },
  "icons": [
    {
      "src": "kitty.png",
      "sizes": "16x16",
      "type": "image/png"
    },
    {
      "src": "kitty.png",
      "sizes": "48x48",
      "type": "image/png"
    },
    {
      "src": "kitty.png",
      "sizes": "128x128",
      "type": "image/png"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": ["storage"]
}